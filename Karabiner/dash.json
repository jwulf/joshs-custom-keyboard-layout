{
    "title": "Josh: Dvorak-style hyphen",
    "rules": [
        {
            "description": "Josh: Map quote + modifier -> hyphen, like Dvorak",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "quote",
                        "modifiers": {
                            "mandatory": [
                                "fn"
                            ],
                            "optional": [
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "hyphen"
                        }
                    ]
                }
            ]
        }
    ]
}